

<div class="row"> 

<div class="panel">
<center><h1>Картотека</h1></center>

<% if current_user.nil? %>
  <p><%= link_to "Вход в интерфейс", new_user_path %></p>
<% else %>
  <p><b>Вход осуществлен от имени :</b></p>
  <p><b>Электронная почта:</b> <%= current_user.email %></p>
  <p><b>Фио:</b> <%= current_user.name %></p>
  <%= simple_format current_user.bio %>
  <p><%= link_to "Войти повторно", new_user_path %></p>
<% end %>

<br>
