    <th> Действия</th>
    <th> Действия</th>
    
    
  </tr>
 </thead>
 
 <tbody>
 <%i = 0%>
  <% @user.each do |fc| %>
    <tr>
    	<%i = i + 1%>
      <td><%= i%></td>
      <td><%= fc.rabm %></td>
      <td><%= fc.name %></td>	
      <td><%= fc.date_of_birth %></td>
      <td><%= fc.email %></td>
      <td><%= link_to "Показать", user_path(fc)%></td>
      <td><%= link_to "Изменить"%></td>
      <td><%= link_to "Удалить"%></td>
     
    </tr>
  <% end %>
  </tbody>
</table>
	</div>
</div>

