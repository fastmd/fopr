<div class="panel callout radius">
<center><h1>Форма регистрации</center></h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <center><h3><%= f.label :"Адрес электронной почты" %></h3></center><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <center><h3><%= f.label :"Пароль" %></h3></center><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <center><h3><%= f.label :"потверждение пароля" %></h3></center><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <center><%= f.submit "Зарегестрироватся", :class => "button" %></center>
  </div>
<% end %>

</div>
